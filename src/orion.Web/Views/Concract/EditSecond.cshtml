@model orion.Web.Model.ViewModel.Concract.ConcractPackagesViewModel;

<environment names="Development">
    <script src="~/js/views/concract/EditSecond.js"></script>
</environment>

<environment names="Staging,Production">
    <script src="~/js/views/concract/EditSecond.js"></script>
</environment>

@{
    ViewData["Title"] = "EditSecond";
}

<h3 style="text-align:center;margin:20px">Izmena ugovora 2.deo</h3>

<div class="row">
    <div class="col-md-6">
        <table class="table table-hover table-striped" id="allTable">
            <thead>
                <tr>
                    <td>Akcija</td>
                    <td>Naziv</td>
                    <td>Opis</td>
                    <td>Cena</td>
                    <td>Kategorija</td>
                </tr>
            </thead>
            <tbody>
                @foreach (var package in Model.RestPackages)
                {
                    <tr id="@package.Id">
                        <td>
                            <a class="btn btn-info" onclick="add('@package.Id')">+</a>
                        </td>
                        <td>@package.Name</td>
                        <td>@package.Description</td>
                        <td>@package.Price</td>
                        <td>@package.Category.ToString()</td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
    <div class="col-md-6">
        <table class="table table-hover table-striped" id="choosenTable">
            <thead>
                <tr>
                    <td>Akcija</td>
                    <td>Opis</td>
                    <td>Cena</td>
                    <td>Kategorija</td>
                    <td>Naziv</td>
                </tr>
            </thead>
            <tbody>
                @foreach (var package in Model.ChoosenPackages)
                {
                    <tr id="@package.Id">
                        <td>
                            <a class="btn btn-danger" onclick="remove('@package.Id')">-</a>
                        </td>
                        <td>@package.Name</td>
                        <td>@package.Description</td>
                        <td>@package.Price</td>
                        <td>@package.Category.ToString()</td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>
<div class="row">
    <button class="btn btn-block btn-primary" onclick="createConcract()">@L("ConcractCreate")</button>
</div>

<div class="modal" tabindex="-1" role="dialog" id="ErrorModal">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">Stvaranje Ugovora je odbijeno</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                <p id="ErrorMessage"></p>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-dismiss="modal">Zatvori</button>
            </div>
        </div>
    </div>
</div>

